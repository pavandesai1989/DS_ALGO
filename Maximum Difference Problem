----------------------- naive solution ---------------------------------------
#include<iostream>
using namespace std;

int MaxDifference(int a[],int size)
{
    int max=0;
    for(int i=0;i<size;i++)
    {
        for(int j=i+1;j<size;j++)
        {
            int diff =0;
            if (j>i)
               diff = a[j] - a[i];
               
            if(diff>max)
              max = diff;
        }
    }
    
    return max;
}

int main()
{
    int a[3] = {10,20,30};
    cout<<MaxDifference(a,3)<<endl;
    
    return 0;
}

Time : O(N*N)
space: O(1)
